{
  "meta": {
    "id": "preprocess-vbm",
    "name": "VBM (Voxel Based Morphometry) on T1W scans",
    "version": "v1.0",
    "repository": "github.com/MRN-Code/Coinstac_VBM_computation.git",
    "description": "This computation runs Voxel Based Morphometry on structural T1 weighted MRI nifti scans using SPMv12 standalone and MATLAB Runtimev713. Each scan takes approximately 5 mins to run on a system with 2.3 GHz,i5 equivalent processor, 8GB RAM. Each scan output directory takes about 300MB space. Please make sure to have the space and resources.",
    "tags": [
      "vbm",
      "preprocess"
    ],
    "preprocess": true
  },
  "computation": {
    "type": "docker",
    "dockerImage": "last",
    "command": [
      "python",
      "/computation/run_vbm.py"
    ],
    "input": {
      "options_smoothing": {
        "type": "number",
        "label": "Smoothing FWHM in mm",
        "defaultValue": 10,
        "min": 0,
        "max": 10,
        "step": 1,
        "description": "Full width half maximum smoothing kernel value in x,y,z directions"
      },
      "data": {
        "type": "array",
        "label": "Nifti files"
      },
      "standalone": {
        "type": "boolean"
      },
      "options_reorient_params_x_mm": {
        "type": "number",
        "label": "x translation in mm",
        "defaultValue": 0,
        "min": -50,
        "max": 50,
        "description": "x translation in mm"
      },
        "options_reorient_params_y_mm": {
        "type": "number",
        "label": "y translation in mm",
        "defaultValue": 0,
        "min": -50,
        "max": 50,
        "description": "y translation in mm"
      },
        "options_reorient_params_z_mm": {
        "type": "number",
        "label": "z translation in mm",
        "defaultValue": 0,
        "min": -50,
        "max": 50,
        "description": "z translation in mm"
      },
	      "options_reorient_params_pitch": {
        "type": "number",
        "label": "x rotation about pitch in degrees[-360,360]",
        "defaultValue": 0,
        "min": -360,
        "max": 360,
        "description": "x rotation about - {pitch} (degrees). Ex: 90"
      },
        "options_reorient_params_roll": {
        "type": "number",
        "label": "y rotation about roll in degrees[-360,360]",
        "defaultValue": 0,
        "min": -360,
        "max": 360,
        "description": "y rotation about - {roll}  (degrees). Ex: 180"
      },
        "options_reorient_params_yaw": {
        "type": "number",
        "label": "z rotation about yaw in degrees[-360,360]",
        "defaultValue": 0,
        "min": -360,
        "max": 360,
        "description": "z rotation about - {yaw}   (degrees). Ex: -45"
      },
     "regression_resample_voxel_size": {
        "type": "number",
        "label": "Smoothing FWHM in mm",
        "defaultValue": 4,
        "min": 1,
        "max": 6,
        "step": 1,
        "description": "Full width half maximum smoothing kernel value in x,y,z directions",
       "conditionalToggle": {
          "variable": "variable-name",
          "toggle": "boolean"
        }
      },
      "regression_file_input_type": {
        "type": "string",
        "defaultValue": "swc1",
        "select_options": [
          "swc1",
          "swc2",
          "swc3"
        ],
        "description": "Select type of vbm output for regression:Smoothed warped 1)Grey matter,2)White matter,3)Cerebro spinal fluid",
        "conditionalToggle": {
          "variable": "variable-name",
          "toggle": "boolean"
        }
      },
      "covariates": {
        "label": "Covariates",
        "type": "array",
        "items": [
          "boolean",
          "number"
        ],
        "conditionalToggle": {
          "variable": "variable-name",
          "toggle": "boolean"
        }
      }
    },
    "output": {
      "covariates": {
        "type": "array",
        "items": [
          "boolean",
          "number"
        ]
      },
      "message": {
        "type": "string",
        "description": "Output message from VBM step"
      }
    }
  }
}
